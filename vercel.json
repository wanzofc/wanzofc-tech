{
  "version": 2,
  "builds": [
    { "src": "app.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "views/**", "use": "@vercel/static" },
    { "src": "404.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/public/(.*)", "dest": "/public/$1" },
    { "src": "/views/(.*)", "dest": "/views/$1" },
    { "src": "/api/(.*)", "dest": "app.js" },
    { "src": "/404", "dest": "/404.html" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "app.js" }
  ]
}
